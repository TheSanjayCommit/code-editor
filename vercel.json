{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.js"
        },
        {
            "src": "/files/(.*)",
            "dest": "/server/index.js"
        },
        {
            "src": "/generate",
            "dest": "/server/index.js"
        },
        {
            "src": "/preview/(.*)",
            "dest": "/server/index.js"
        },
        {
            "src": "/socket.io/(.*)",
            "dest": "/server/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}